<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#1A1A1A">

    <!-- Icon -->
    <TextView
        android:id="@+id/iconEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ðŸŒ"
        android:textSize="48sp"
        android:layout_marginBottom="12dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/osm_contribute_title"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Encouragement message -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/osm_contribute_message"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginBottom="16dp" />

    <!-- Speed limit being submitted -->
    <LinearLayout
        android:id="@+id/speedLimitDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/speedLimitValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="#007BFF"
            android:textSize="48sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed" />

        <TextView
            android:id="@+id/speedLimitUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mph"
            android:textColor="#666666"
            android:textSize="24sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Connect to OSM button (shown if not logged in) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/connectOsmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/osm_connect_button"
        style="@style/Widget.Material3.Button"
        app:backgroundTint="#4CAF50"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="4dp" />

    <!-- Why connect link (shown if not logged in) -->
    <TextView
        android:id="@+id/whyConnectLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="What\'s OpenStreetMap?"
        android:textColor="#007BFF"
        android:textSize="13sp"
        android:padding="8dp"
        android:layout_marginBottom="4dp" />

    <!-- Submit button (shown if logged in) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/osm_submit_button"
        android:visibility="gone"
        style="@style/Widget.Material3.Button"
        app:backgroundTint="#4CAF50"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="8dp" />

    <!-- Cancel button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/osm_cancel_button"
        style="@style/Widget.Material3.Button.TextButton"
        android:textColor="#888888" />

</LinearLayout>

